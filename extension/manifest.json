{
  "manifest_version": 3,
  "name": "Readable for NotebookLM",
  "version": "1.0.1",
  "description": "Readable for NotebookLM improves the readability of Google NotebookLM saved notes with better typography and enhanced focus mode.",
  "author": "Nando Rossi",
  "homepage_url": "https://nan.do",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/notebook/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/notebook/*"],
      "js": ["content/content.js"],
      "css": ["styles/readability.css"]
    }
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "readable-notebooklm@nan.do",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
